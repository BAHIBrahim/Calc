<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_button</item>
        <item name="colorPrimaryVariant">@color/dark_button_clicked</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green_color</item>
        <item name="colorSecondaryVariant">@color/dark_c_color</item>
        <item name="colorOnSecondary">@color/dark_green_color_clicked</item>
        <item name="colorOnBackground">#a2a2a2</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/dark_background</item>
    </style>

</resources>