<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_button</item>
        <item name="colorPrimaryVariant">@color/light_button_clicked</item>
        <item name="colorOnPrimary">#754a20</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green_color</item>
        <item name="colorSecondaryVariant">@color/light_c_color</item>
        <item name="colorOnSecondary">@color/light_green_color_clicked</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/light_background</item>
    </style>

</resources>